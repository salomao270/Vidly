@model Vidly.ViewModels.MovieFormViewModels

@{
    ViewBag.Title = Model.Title;
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Title</h2>

@using (Html.BeginForm("Save", "Movies"))
{
<div class="form-group">
    @Html.LabelFor(m => m.Name)
    @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Name)
    <p></p>
    @Html.LabelFor(m => m.ReleaseDate)
    @Html.TextBoxFor(m => m.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.ReleaseDate)
    <p></p>
    @Html.LabelFor(m => m.GenreId)    
    @Html.DropDownListFor(m => m.GenreId, new SelectList(Model.Genres, "Id", "GenreTypeName"), "", new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.GenreId)
    <p></p>
    @Html.LabelFor(m => m.Stock)
    @Html.TextBoxFor(m => m.Stock, new { @class = "form-control" })
    @Html.ValidationMessageFor(m => m.Stock)
</div>

    @Html.HiddenFor(m => m.Id)
    @Html.AntiForgeryToken()
    <button type="submit" class="btn btn-primary">Save</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}