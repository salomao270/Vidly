@model IEnumerable<Vidly.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Movies</h1>
@if (Model.Count() <= 0 )
{
    <p>We dont have any movie yet</p>
}

<table class="table table-bordered table-hover">
    <thead>
        <tr>
            <th>Movie</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var movie in Model)
        {
        <tr>
            <td>@movie.Name</td>
            @*   <td>@Html.ActionLink(movie.Name, "Details", "Customers", new { id = customer.Id, name = customer.Name }, null)</td>  *@
        </tr>
        }
    </tbody>
</table>
